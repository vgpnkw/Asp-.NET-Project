@model WikiPedia.Models.Publication
@{
    ViewBag.Title = "Removing the article";
}

<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>About</dt>
        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-danger" value="Remove" />
            </div>
        </form>
    </div>
</div>